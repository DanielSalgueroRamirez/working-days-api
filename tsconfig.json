{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "dist",
    "resolveJsonModule": true, // ðŸ‘ˆ habilita imports de .json
    "moduleResolution": "node" // ðŸ‘ˆ asegura que lo resuelva bien
  },
  "include": [
    "src/**/*",
    "infra/lib/**/*",
    "infra/bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "infra/test"
  ]
}
